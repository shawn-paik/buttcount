- if user_signed_in? 
	- if @user["fbid"]
		<a id="logout">Log out of Facebook</a>
	- else
		= link_to "Sign out", '/pages', method: :delete
- else
	<a id ="login">Log in with Facebook</a>
	.or
		OR
	-# = link_to "Sign up", new_user_registration_path	
	.register
	=form_tag '/users', method: :post do
		= email_field_tag "email", nil, placeholder: "Email"
		= password_field_tag "password", ""
		= submit_tag "Submit"